# Database (SQLite for dev, PostgreSQL for prod)
DATABASE_URL="file:./dev.db"

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Server Port
PORT=3001

# Node environment
NODE_ENV="development"

# Uploads
UPLOAD_DIR="./uploads"

# AWS S3 / Cloudflare R2 Configuration (optional - for production)
# S3_BUCKET="antum-uploads"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY_ID="your-access-key-id"
# S3_SECRET_ACCESS_KEY="your-secret-access-key"
# S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
# S3_PUBLIC_URL="https://your-bucket.s3.amazonaws.com"

# Email (Resend - required for password reset)
# RESEND_API_KEY="re_xxxxxxxxxxxx"
# FROM_EMAIL="Nightout <noreply@yourdomain.com>"

# Password Reset / Deep Links
# APP_URL="https://nightout.app"

# CORS (comma-separated origins for production)
# CORS_ORIGIN="https://nightout.app"

# Sentry Error Tracking
# SENTRY_DSN="https://your-dsn@sentry.io/123"
