require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] = podfile_properties['newArchEnabled'] == 'true' ? '1' : '0'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] = podfile_properties['EX_DEV_CLIENT_NETWORK_INSECTOR']

use_autolinking_method_symbol = ('use' + '_native' + '_modules!').to_sym
origin_autolinking_method = self.method(use_autolinking_method_symbol)
self.define_singleton_method(use_autolinking_method_symbol) do |*args|
  if ENV['EXPO_UNSTABLE_CORE_AUTOLINKING'] == '1'
    Pod::UI.puts('Using expo-modules-autolinking as core autolinking source'.green)
    config_command = [
      'node',
      '--no-warnings',
      '--eval',
      'require(require.resolve(\'expo-modules-autolinking\', { paths: [require.resolve(\'expo/package.json\')] }))(process.argv.slice(1))',
      'react-native-config',
      '--json',
      '--platform',
      'ios'
    ]
    origin_autolinking_method.call(config_command)
  else
    origin_autolinking_method.call()
  end
end

platform :ios, podfile_properties['ios.deploymentTarget'] || '13.4'
use_modular_headers!

install! 'cocoapods',
  :deterministic_uuids => false

prepare_react_native_project!

target 'Nightout' do
  use_expo_modules!
  config = use_native_modules!
  pod 'Firebase', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true
  pod 'gRPC-Core', :modular_headers => false
  pod 'gRPC-C++', :modular_headers => false

  use_frameworks! :linkage => podfile_properties['ios.useFrameworks'].to_sym if podfile_properties['ios.useFrameworks']
  use_frameworks! :linkage => ENV['USE_FRAMEWORKS'].to_sym if ENV['USE_FRAMEWORKS']

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['expo.jsEngine'] == nil || podfile_properties['expo.jsEngine'] == 'hermes',
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :privacy_file_aggregation_enabled => podfile_properties['apple.privacyManifestAggregationEnabled'] != 'false',
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => podfile_properties['apple.ccacheEnabled'] == 'true',
    )

    # ---- Fix gRPC-Core / Xcode template warning treated as error ----
    installer.pods_project.targets.each do |t|
      next unless ['gRPC-Core', 'gRPC-C++', 'gRPC-ProtoRPC', 'gRPC-RxLibrary'].include?(t.name)

      t.build_configurations.each do |config|
        flags = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || '$(inherited)'
        flags = [flags] unless flags.is_a?(Array)
        flags << '-Wno-error=missing-template-arg-list-after-template-kw'
        flags << '-Wno-missing-template-arg-list-after-template-kw'
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = flags
      end
    end

    # Fix for "unsupported option '-G'" in BoringSSL-GRPC (caused by -GCC_WARN_INHIBIT_ALL_WARNINGS being interpreted as -G)
    installer.pods_project.targets.each do |target|
      if target.name.include?('BoringSSL')
        target.build_configurations.each do |config|
          cflags = config.build_settings['OTHER_CFLAGS'] || '$(inherited)'
          cflags = [cflags] unless cflags.is_a?(Array)
          cflags = cflags.map do |flag|
            if flag.is_a?(String)
               flag.gsub('-GCC_WARN_INHIBIT_ALL_WARNINGS', '')
            else
               flag
            end
          end
          config.build_settings['OTHER_CFLAGS'] = cflags

          cxxflags = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || '$(inherited)'
          cxxflags = [cxxflags] unless cxxflags.is_a?(Array)
          cxxflags = cxxflags.map do |flag|
             if flag.is_a?(String)
               flag.gsub('-GCC_WARN_INHIBIT_ALL_WARNINGS', '')
             else
               flag
             end
          end
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = cxxflags
        end
        
        target.source_build_phase.files.each do |file|
            if file.settings && file.settings['COMPILER_FLAGS']
              flags = file.settings['COMPILER_FLAGS']
              if flags.is_a?(String)
                 file.settings['COMPILER_FLAGS'] = flags.gsub('-GCC_WARN_INHIBIT_ALL_WARNINGS', '')
              end
            end
        end
      end
    end

    # Fix gRPC-Core module map not found
    folder_path = File.join(installer.sandbox.root, 'Headers/Private/grpc')
    FileUtils.mkdir_p(folder_path)
    module_map_source = File.join(installer.sandbox.root, 'Target Support Files/gRPC-Core/gRPC-Core.modulemap')
    module_map_dest = File.join(folder_path, 'gRPC-Core.modulemap')
    if File.exist?(module_map_source) && !File.exist?(module_map_dest)
      FileUtils.cp(module_map_source, module_map_dest)
    end

    # This is necessary for Xcode 14, because it signs resource bundles by default
    # when building for devices.
    installer.target_installation_results.pod_target_installation_results
      .each do |_pod_name, target_installation_result|
      target_installation_result.resource_bundle_targets.each do |resource_bundle_target|
        resource_bundle_target.build_configurations.each do |config|
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
      end
    end
  end

  post_integrate do |installer|
    begin
      expo_patch_react_imports!(installer)
    rescue => e
      Pod::UI.warn e
    end
  end
end
